<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AddNewCourseActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Year"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/year_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Quarter"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/quarter_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Subject"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/subject_entry_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Example: CSE"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Course Number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/course_number_entry_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Example: 110"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/classSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Class Size"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/dropdownClassSize"
        android:layout_width="wrap_content"
        android:layout_height="23dp" />

    <Button
        android:id="@+id/add_new_course_enter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Enter" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>